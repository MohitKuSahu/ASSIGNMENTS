@model CrudUsingCore.Models.EmployeeModel

@{
    ViewData["Title"] = "Employee Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <h1>Edit Employee</h1>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input asp-for="EmployeeId" type="hidden" />
        <div class="form-group mb-5 position-relative">
            <label asp-for="Name">Employee Name:</label>
            <input asp-for="Name" class="form-control" type="text" required />
            <div class="invalid-tooltip">Please Enter your Name.</div>
        </div>
        <div class="form-group mb-5 position-relative">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" type="text" required />
            <div class="invalid-tooltip">Please Enter valid email.</div>
        </div>
        <div class="form-group mb-5 position-relative">
            <label asp-for="TechStack">TechStack:</label>
            <input asp-for="TechStack" class="form-control" type="text" required />
            <div class="invalid-tooltip">Please provide a Tech Stack.</div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <script src="~/js/Validation.js"></script>
</body>
</html>
@if (TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}

