@{
    ViewBag.Title = "Reports";
}
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/ReportPage.css" />
</head>
<body>
    <div id="report">
        <center><h1>Inventory Summary Report</h1></center>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ItemID</th>
                    <th>ItemName</th>
                    <th>AvailableQuantity</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.Products.Count; i++)
                {
                    var product = ViewBag.Products[i];

                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.ProductTitle</td>
                        <td>@(product.QuantityTotal-product.QuantityBooked)</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <button class="btn btn-success" onclick="exportToPDF()">Export to PDF</button>

</body>
</html>
<script src="~/Scripts/Script.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.debug.js"></script>

